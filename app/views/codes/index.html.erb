<div class = "container">
  <div class = "row">
    <% @codes.each_with_index do |code,index| %>
      <div class = "col-sm-6 col-md-4">
        <div class = "thumbnail">
        <%= image_tag "#{code.image_url}" %>
        <h3><%= code.name %></h3>
        <p>Click on the video content button to see all the video lists within this code</p>
        <p><a href="#" class="btn btn-default" role="button">Videos Content</a></p>
        </div>
      </div>
      <% if (index+1) % 3 == 0 %>
        <div class = "clearfix"></div>
      <% end %>

    <% end %>

  </div>
  
</div>

